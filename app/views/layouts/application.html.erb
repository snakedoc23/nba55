<!DOCTYPE html>
<html>
<head>
  <title>Nba55</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="header clearfix">
    <div class="logo">
      <h1>NBA55</h1>
    </div>
    <div class="login">
      <% if current_user %>
        <%= link_to "Logout", logout_path %>
        <span class="user">
        <%= current_user.email %>
        </span>
      <% else %>
        <%= link_to "Login", login_path %>
      <% end %>
    </div>
  </div>
  <div class="content">
  <%= yield %>
  </div>
</body>
</html>
